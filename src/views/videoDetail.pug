extends layouts/main.pug

block contents
    video.video(src=video.fileUrl controls=true
    data-videoid=video._id style="max-width: 300px; max-hight:300px")
    .video-detail
        h1=video.title
        p=video.description
        ul
            each genre in video.genres
                li=genre
        .video-player
            .video-player__playBtn
                button#playBtn PLAY
            .video-player__volume
                button#mutedBtn MUTE
            .video-player__volume-bar
                input#volumeBar(type="range", max=1, min=0, step=0.05)
            .video-player__timeline
                span#videoCurrentTime 00:00
                span |
                span#videoDuration 00:00
            .video-player__timeline-bar
                input#timeLineBar(type="range" min=0)
            .video-player__fullScreen
                button#fullScreenBtn Full Screen Btn
        if creator == video.creator
            a(href=`/videos/delete/${video._id}`) DELETE VIDEO
            a(href=`/videos/edit/${video._id}`) EDIT VIDEO\
            form#video-comments-form
                input(type="textarea" name="comment" style="width : 600px; height:100px;")
                button#submitCommentBtn Post Submit!
    script(src="/assets/js/videoPlayer.js")
    script(src="/assets/js/commentSection.js")